  "scripts": {
    "lint": "eslint src",
    "test": "karma start",
    "dev": "webpack-dev-server --host local.tryshuttle.com --progress --colors --history-api-fallback --content-base dist/ --port 8000 --hot",
    "dist": "make copy; webpack --config webpack.config.dist.js",
    "productiondist": "make copy; webpack --config webpack.config.prod.js",
    "server": "node ./server.js"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "destructuring": true,
      "forOf": true,
      "jsx": true,
      "modules": true
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-trailing-spaces": 0,
      "no-underscore-dangle": 0,
      "quotes": [
        1,
        "single"
      ]
    }
  },
