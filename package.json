{
  "name": "shuttle",
  "version": "0.0.1",
  "description": "Shuttle is a Todo and Note taking app with a focus on privacy.",
  "homepage": "https://github.com/scottmtp",
  "author": {
    "name": "Scott Dietrich",
    "email": "scott@minutestopost.com",
    "url": "https://github.com/scottmtp"
  },
  "dependencies": {
    "concat-stream": "^1.5.0",
    "debug": "^2.2.0",
    "express": "^4.13.3",
    "express-force-ssl": "^0.2.13",
    "flux": "^2.0.3",
    "helmet": "^0.10.0",
    "jwt-simple": "^0.3.0",
    "keymirror": "^0.1.1",
    "lodash": "^3.10.0",
    "material-ui": "0.11.0",
    "morgan": "^1.6.1",
    "object-assign": "^3.0.0",
    "pouchdb": "4.0.1",
    "pouchdb-replication-stream": "^1.2.4",
    "react": "^0.13.3",
    "react-quill": "^0.2.2",
    "react-router": "^0.13.3",
    "react-tap-event-plugin": "^0.1.7",
    "socket.io": "^1.3.6",
    "socket.io-client": "^1.3.6",
    "uuid": "^2.0.1"
  },
  "devDependencies": {
    "appcache-webpack-plugin": "^0.2.0",
    "babel-core": "^5.7.4",
    "babel-eslint": "^3.1.23",
    "babel-jest": "^5.3.0",
    "babel-loader": "^5.3.2",
    "eslint-plugin-react": "^2.7.1",
    "jest-cli": "^0.5.0",
    "json-loader": "^0.5.2",
    "react-hot-loader": "^1.2.8",
    "shipit-cli": "^1.3.0",
    "shipit-deploy": "^2.0.0",
    "webpack": "^1.10.1",
    "webpack-dev-server": "^1.10.1"
  },
  "scripts": {
    "lint": "eslint src",
    "test": "jest --coverage",
    "copy": "cp ./src/index.html dist/; cp ./src/images/* dist/; cp node_modules/react-quill/node_modules/quill/dist/quill.base.css dist/; cp node_modules/react-quill/node_modules/quill/dist/quill.snow.css dist/",
    "dev": "webpack-dev-server --host 0.0.0.0 --progress --colors --history-api-fallback --content-base dist/ --port 8000 --hot",
    "dist": "npm run copy; webpack --config webpack.config.dist.js",
    "productiondist": "npm run copy; webpack --config webpack.config.prod.js",
    "server": "node ./server.js"
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "testFileExtensions": [
      "es6",
      "js"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "es6"
    ]
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "destructuring": true,
      "forOf": true,
      "jsx": true,
      "modules": true
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-trailing-spaces": 0,
      "no-underscore-dangle": 0,
      "quotes": [
        1,
        "single"
      ]
    }
  },
  "license": "MIT"
}
