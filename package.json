    "pouchdb-adapter-memory": "^6.2.0",
    "regenerator-runtime": "^0.10.5",
    "shipit-cli": "1.4.1",
    "shipit-deploy": "2.1.2",
    "webpack-dev-server": "^2.4.5"
  },
  "scripts": {
    "lint": "node_modules/.bin/eslint src",
    "test": "node_modules/.bin/jest",
    "dev": "node_modules/.bin/webpack-dev-server --host local.tryshuttle.com --progress --colors --history-api-fallback --content-base dist/ --port 8000 --hot",
    "dist": "make copy; node_modules/.bin/webpack --config webpack.config.dist.js",
    "productiondist": "make copy; node_modules/.bin/webpack --config webpack.config.prod.js",
    "server": "node ./server.js"
  },
  "eslintConfig": {
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "destructuring": true,
      "forOf": true,
      "jsx": true,
      "modules": true
    },
    "env": {
      "browser": true,
      "node": true
    },
    "rules": {
      "no-trailing-spaces": 0,
      "no-underscore-dangle": 0,
      "quotes": [
        1,
        "single"
      ]
    }
  },
  "license": "MIT"
